<%# The container tag
  - available local variables
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
    paginator:     the paginator that renders the pagination tags inside
-%>
<%= paginator.render do -%>
  <nav class="w-full text-center my-16" role="navigation" aria-label="pager">
    <div class="inline border-4 border-secondary rounded-md py-4">
      <%= first_page_tag %>
      <% each_page do |page| -%>
        <% if page.display_tag? -%>
          <%= page_tag page %>
        <% end -%>
      <% end -%>
      <% unless current_page.out_of_range? %>
        <%= last_page_tag %>
      <% end %>
    </div>
  </nav>
<% end -%>
