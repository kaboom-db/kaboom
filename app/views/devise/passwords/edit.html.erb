<%= render PageTitleComponent.new(text: "Change your password") %>

<%= render SectionComponent.new do %>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="flex flex-col gap-4 my-4">
      <%= render Forms::TextFieldComponent.new(form: f, field: :password, type: "password_field", autofocus: true, required: true) %>
      <%= render Forms::TextFieldComponent.new(form: f, field: :password_confirmation, type: "password_field", required: true) %>
    </div>

    <%= render Forms::SubmitComponent.new(form: f, text: "Change my password") %>

    <div class="my-4">
      <%= link_to "Log in", new_session_path(resource_name), class: "text-sm underline mr-2" %> ·
      <%= link_to "Sign up", new_registration_path(resource_name), class: "text-sm underline ml-2" %> ·
      <%= link_to "Resend confirmation instructions", new_confirmation_path(resource_name), class: "text-sm underline ml-2" %>
    </div>
  <% end %>
<% end %>
