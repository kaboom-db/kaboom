<%= render SectionComponent.new do %>
  <%= render PageTitleComponent.new(text: "Welcome back!") %>
<% end %>

<%= render SectionComponent.new do %>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="flex flex-col gap-4 my-4">
      <%= render Forms::TextFieldComponent.new(form: f, field: :email, type: "email_field", autofocus: true, required: true) %>

      <%= render Forms::TextFieldComponent.new(form: f, field: :password, type: "password_field", required: true) %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="my-4">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="flex gap-4 my-4">
      <%= render Forms::SubmitComponent.new(form: f, text: "Log in") %>
      <%= render LinkComponent.new(text: "Sign up instead", href: new_registration_path(resource_name)) %>
    </div>

    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-sm underline py-4" %>
  <% end %>
<% end %>
