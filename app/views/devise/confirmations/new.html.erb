<%= render PageTitleComponent.new(text: "Resend confirmation instructions") %>

<%= render SectionComponent.new do %>
  <p>Enter your email below and we'll resend you the user account confirmation instructions shortly.</p>
  <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: {method: :post}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="flex flex-col gap-4 my-4">
      <%= render Forms::TextFieldComponent.new(form: f, field: :email, type: "email_field", autofocus: true, required: true) %>
    </div>

    <%= render Forms::SubmitComponent.new(form: f, text: "Resend instructions") %>

    <div class="my-4">
      <%= link_to "Log in", new_session_path(resource_name), class: "text-sm underline mr-2" %> ·
      <%= link_to "Sign up", new_registration_path(resource_name), class: "text-sm underline ml-2" %> ·
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-sm underline ml-2" %>
    </div>
  <% end %>
<% end %>
