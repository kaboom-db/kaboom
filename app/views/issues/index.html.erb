<%= render SectionComponent.new do %>
  <%= render PageTitleComponent.new(text: "Issues") %>
<% end %>

<%= render SectionComponent.new do %>
  <div class="flex flex-wrap gap-4">
    <% @comic.ordered_issues.each do |issue| %>
      <%= render ResourcePosterComponent.new(resource: issue, resource_path: comic_issue_path(issue, comic_id: @comic.id)) %>
    <% end %>
  </div>
<% end %>
