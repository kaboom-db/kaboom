<%= turbo_stream.append("activities", partial: "activity", collection: @feed_activity, as: :activity) %>

<% if @feed_activity.size >= Social::Feed::PER_PAGE %>
  <%= turbo_stream.update("load_more_link", partial: "load_more_activities_link") %>
<% else %>
  <%= turbo_stream.remove("load_more_link") %>
<% end %>
