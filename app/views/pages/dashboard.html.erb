<div class="my-6">
  <%= render GradientBorderComponent.new do %>
    <div class="flex flex-col items-center gap-4">
      <img src="<%= current_user.avatar %>" class="h-20 w-20 rounded-full border-[5px] border-black" />
      <h1 class="text-2xl font-bold"><%= current_user.username %></h1>
    </div>
  <% end %>
</div>

<div class="my-6">
  <%= render ChipHeaderComponent.new(text: "Up next") %>
  <%= render GradientBorderComponent.new do %>
    <div class="flex flex-col items-center gap-4">
      Up next coming soon
    </div>
  <% end %>
</div>

<div class="my-6">
  <%= render ChipHeaderComponent.new(text: "Your history") %>
  <div class="grid grid-cols-2 lg:grid-cols-4 gap-4">
    <% @issue_history.each do |issue| %>
      <%= render ResourceTileComponent.new(resource: issue, resource_path: comic_issue_path(issue, comic_id: issue.comic.id)) %>
    <% end %>
  </div>
</div>
