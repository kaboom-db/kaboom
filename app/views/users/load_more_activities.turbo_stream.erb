<%= turbo_stream.append("activities", partial: "shared/activity", collection: @activities, as: :activity) %>

<% if @activities.size >= Social::Feed::PER_PAGE %>
  <%= turbo_stream.update("load_more_link", partial: "shared/load_more_activities_link", locals: {href: load_more_activities_user_path(@user)}) %>
<% else %>
  <%= turbo_stream.remove("load_more_link") %>
<% end %>
