<%= render SectionComponent.new do %>
  <%= render UserHeroComponent.new(user: @user, current_user:, possessive: "Collection") %>
<% end %>

<%= render SectionComponent.new do %>
  <% @collection_grouped.each_pair do |day, items| %>
    <div class="my-6">
      <p class="my-4 text-2xl font-bold"><%= day %></p>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
        <% items.each do |item| %>
          <%= render ResourceTileControlComponent.new(issue: item.issue, user: current_user, read_at: nil) %>
        <% end %>
      </div>
    </div>
  <% end %>
  <%= paginate @collection %>
<% end %>
