<div data-controller="favourite"
     data-favourite-status-value="<%= @is_favourited %>"
     data-favourite-baseurl-value="<%= @resource_path %>">

  <button data-favourite-target="button"
          data-action="click->favourite#trigger"
          class="group inline-block w-full py-1.5 px-[5%] border-t-2 border-black bg-gray-100 hover:bg-[#ff85a2] cursor-pointer transition duration-300 ease-in-out">
    <i data-favourite-target="icon" class="fa-solid fa-heart text-auto text-[#ff85a2] group-hover:text-white transition duration-300 ease-in-out"></i>
  </button>

</div>
