<div data-controller="wishlist"
     data-wishlist-status-value="<%= @is_wishlisted %>"
     data-wishlist-baseurl-value="<%= @resource_path %>">

  <button data-wishlist-target="button"
          data-action="click->wishlist#trigger"
          class="group inline-block w-full py-1.5 px-[5%] border-t-2 border-black bg-gray-100 hover:bg-[#fdbd7d] cursor-pointer transition duration-300 ease-in-out">
    <i data-wishlist-target="icon" class="fa-solid fa-cake-candles text-auto text-[#fdbd7d] group-hover:text-white transition duration-300 ease-in-out"></i>
  </button>

</div>
