<% if @is_read %>
  <button class="inline-block py-1.5 px-[5%] rounded-md border-2 border-[#ff6961] bg-[#ff6961] cursor-pointer transition duration-300 ease-in-out">
    <i class="fa-solid fa-check text-auto text-white transition duration-300 ease-in-out"></i>
  </button>
<% else %>
  <button class="group inline-block py-1.5 px-[5%] rounded-md border-2 border-[#ff6961] hover:bg-[#ff6961] cursor-pointer transition duration-300 ease-in-out">
    <i class="fa-solid fa-check text-auto text-[#ff6961] group-hover:text-white transition duration-300 ease-in-out"></i>
  </button>
<% end %>
