<dialog data-remove-item-target="dialog" data-controller="dialog" data-action="click->dialog#click" data-dialog-target="dialog" id="readDialog" class="open:flex open:p-0 open:bg-transparent open:flex-col open:gap-4 backdrop:backdrop-blur-sm">
  <div class="rounded-xl border-2 border-black bg-gray-100 p-4">
    <h5 class="text-xl font-bold">Are you sure you want to remove this?</h1>
    <div class="my-4 flex flex-col gap-4">
      <%= content %>
      <small data-remove-item-target="error" class="font-bold text-red-500 hidden">Could not remove this record.</small>
    </div>
    <div class="my-4 flex gap-4">
      <button data-action="click->remove-item#removeItem" class="w-full font-bold rounded-full border-2 border-black inline-block py-1.5 px-3 bg-primary-light cursor-pointer hover:bg-primary transition duration-300 ease-in-out">
        Yes
      </button>
      <button data-action="click->remove-item#closeDialog" class="w-full font-bold rounded-full border-2 border-black inline-block py-1.5 px-3 bg-primary-light cursor-pointer hover:bg-primary transition duration-300 ease-in-out" autofocus="autofocus">
        No
      </button>
    </div>
  </div>
</dialog>
