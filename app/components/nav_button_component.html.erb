<% classes = @active ? "border-2 bg-secondary" : "bg-secondary/60 hover:bg-secondary transition duration-300 ease-in-out" %>
<% button_size = @mobile ? "min-w-[3rem] h-14 w-16" : "h-12 w-full" %>

<%= link_to @href, class: "sm:px-2 w-full", data: {turbo_method: @method} do %>
  <div class="flex items-center justify-center rounded-xl border-black <%= button_size %> <%= classes %>">
    <i class="text-sm fa-solid fa-<%= @icon %>"></i>
  </div>
<% end %>
